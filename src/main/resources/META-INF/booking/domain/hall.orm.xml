<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm" version="3.2">
  <package>com.github.booking.domain.hall</package>
  <access>FIELD</access>
  <embeddable class="Hall">
    <attributes>
      <basic name="name"/>
      <embedded name="hallId"/>
      <embedded name="seatLayout"/>
    </attributes>
  </embeddable>
  <embeddable class="HallId">
    <attributes>
      <basic name="value"/>
    </attributes>
  </embeddable>
  <embeddable class="SeatLayout">
    <attributes>
      <basic name="rowCount"/>
      <basic name="columnCount"/>
    </attributes>
  </embeddable>
  <embeddable class="SeatNumber">
    <attributes>
      <basic name="value"/>
    </attributes>
  </embeddable>
</entity-mappings>
